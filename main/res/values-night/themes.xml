<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark Theme -->
    <style name="Base.Theme.MusicBPM" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Error colors -->
        <item name="colorError">#CF6679</item>
        <item name="colorOnError">@color/black</item>

        <!-- Surface colors -->
        <item name="colorSurface">#121212</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurfaceVariant">#1E1E1E</item>
        <item name="colorOnSurfaceVariant">#B3B3B3</item>

        <!-- Background colors -->
        <item name="android:colorBackground">#000000</item>
        <item name="colorOnBackground">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">#000000</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.MusicBPM" parent="Base.Theme.MusicBPM" />
</resources>