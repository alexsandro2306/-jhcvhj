<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.add.AddMusicFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Adicionar Música"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cole o link do Spotify ou YouTube"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_link"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Link da Música"
            app:startIconDrawable="@android:drawable/ic_menu_search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
            android:layout_marginTop="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textUri"
                android:maxLines="2" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_find_music"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Procurar Música"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til_link"
            android:layout_marginTop="16dp"/>

        <!-- Track Preview Card SIMPLIFICADO -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_track_preview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="?attr/colorSurface"
            app:layout_constraintTop_toBottomOf="@id/btn_find_music"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Album Art -->
                <ImageView
                    android:id="@+id/iv_album_art"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:background="@color/surface_variant"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@tools:sample/avatars" />

                <!-- Track Title -->
                <TextView
                    android:id="@+id/tv_track_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:maxLines="2"
                    android:ellipsize="end"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_album_art"
                    app:layout_constraintTop_toTopOf="@id/iv_album_art"
                    tools:text="California Love" />

                <!-- Artist Name -->
                <TextView
                    android:id="@+id/tv_track_artist"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:maxLines="2"
                    android:ellipsize="end"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_track_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_track_title"
                    tools:text="2Pac, Roger, Dr. Dre" />

                <!-- Spotify Logo -->
                <ImageView
                    android:id="@+id/iv_spotify_logo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:contentDescription="Spotify"
                    app:tint="@color/secondary"
                    app:layout_constraintStart_toStartOf="@id/tv_track_artist"
                    app:layout_constraintTop_toBottomOf="@id/tv_track_artist" />

                <TextView
                    android:id="@+id/tv_spotify_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="Spotify"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    app:layout_constraintStart_toEndOf="@id/iv_spotify_logo"
                    app:layout_constraintTop_toTopOf="@id/iv_spotify_logo"
                    app:layout_constraintBottom_toBottomOf="@id/iv_spotify_logo" />

                <!-- BPM Display (em cima do botão) -->
                <TextView
                    android:id="@+id/tv_bpm_display"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="---"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:gravity="center"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@id/iv_album_art"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="94 BPM" />

                <!-- Tap Tempo Button GRANDE -->
                <Button
                    android:id="@+id/btn_tap_tempo"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:text="TAP TEMPO"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    app:layout_constraintTop_toBottomOf="@id/tv_bpm_display"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tv_tap_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Toque no ritmo da música (mínimo 4 vezes)"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/btn_tap_tempo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Reset Button -->
                <Button
                    android:id="@+id/btn_reset_taps"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recomeçar"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_tap_hint"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Manual BPM Input (opcional) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_bpm"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="BPM (ou use Tap Tempo)"
                    android:layout_marginTop="12dp"
                    app:helperTextEnabled="true"
                    app:errorEnabled="true"
                    app:layout_constraintTop_toBottomOf="@id/btn_reset_taps"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_bpm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textSize="16sp"
                        android:gravity="center"
                        tools:text="94" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Buttons -->
                <Button
                    android:id="@+id/btn_open_spotify"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Abrir no Spotify"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    app:icon="@android:drawable/ic_media_play"
                    app:iconGravity="textStart"
                    app:layout_constraintTop_toBottomOf="@id/til_bpm"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn_add_to_library"
                    app:layout_constraintWidth_percent="0.48"/>

                <Button
                    android:id="@+id/btn_add_to_library"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Adicionar"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    app:icon="@android:drawable/ic_menu_add"
                    app:iconGravity="textStart"
                    app:layout_constraintTop_toTopOf="@id/btn_open_spotify"
                    app:layout_constraintStart_toEndOf="@id/btn_open_spotify"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.48"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>